{
	"easycom": {
		"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationStyle": "custom",
				"disableScroll": true
			}
		},
		{
			"path": "pages/index/access_request",
			"style": {
				"navigationBarTitleText": "申请权限"
			}
		}, {
			"path": "pages/company/company_list",
			"style": {
				"navigationBarTitleText": "税源地列表",
				"enablePullDownRefresh": true
			}
		}, {
			"path": "pages/company/company_add",
			"style": {
				"navigationBarTitleText": "添加税源地"
			}
		}, {
			"path": "pages/my/my",
			"style": {
				"navigationBarTitleText": "我的"
			}
		}, {
			"path": "pages/client/client_list",
			"style": {
				"navigationBarTitleText": "客户列表",
				"enablePullDownRefresh": true
			}
		}, {
			"path": "pages/client/client_detail",
			"style": {
				"navigationBarTitleText": "客户详情"
			}
		}, {
			"path": "pages/client/client_add",
			"style": {
				"navigationBarTitleText": "添加客户"
			}
		}, {
			"path": "pages/issue/issue_list",
			"style": {
				"navigationBarTitleText": "业务单列表",
				"enablePullDownRefresh": true
			}
		}, {
			"path": "pages/issue/issue_add",
			"style": {
				"navigationBarTitleText": "创建业务单"
			}
		},  {
			"path": "pages/issue/issue_detail",
			"style": {
				"navigationBarTitleText": "业务单详情"
			}
		}, {
			"path": "pages/user/user_list",
			"style": {
				"navigationBarTitleText": "用户列表"
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "灵活用工小助手",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#7A7E83",
		"selectedColor": "#2979ff",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [{
				"pagePath": "pages/issue/issue_list",
				"iconPath": "static/tabbar/issue.png",
				"selectedIconPath": "static/tabbar/issue_active.png",
				"text": "业务单"
			}, {
				"pagePath": "pages/client/client_list",
				"iconPath": "static/tabbar/client.png",
				"selectedIconPath": "static/tabbar/client_active.png",
				"text": "客户"
			}, {
				"pagePath": "pages/company/company_list",
				"iconPath": "static/tabbar/company.png",
				"selectedIconPath": "static/tabbar/company_active.png",
				"text": "税源地"
			},
			{
				"pagePath": "pages/my/my",
				"iconPath": "static/tabbar/me.png",
				"selectedIconPath": "static/tabbar/me_active.png",
				"text": "我的"
			}
		]
	}
}
